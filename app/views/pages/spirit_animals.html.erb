<section class="mx-auto max-w-6xl space-y-6 px-4 py-12">
  <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100">
    Spirit Animals
  </h1>
  <p class="text-slate-600 dark:text-slate-300">
    Explore developer spirit animals and their lore ‚Ä¢ <span class="font-semibold text-slate-900 dark:text-slate-100"><%= @spirit_animals.length %></span> spirit animals
  </p>

  <!-- Filters -->
  <div class="rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800">
    <form action="<%= spirit_animals_path %>" method="get">
      <!-- Filter Header -->
      <div class="border-b border-slate-200 px-3 py-3 sm:px-6 sm:py-4 dark:border-slate-700">
        <div class="flex items-center justify-between gap-3">
          <h2 class="text-base sm:text-lg font-semibold text-slate-900 dark:text-slate-100">Browse Spirit Animals</h2>
          <%= link_to directory_path, class: "inline-flex items-center gap-1.5 rounded-lg border border-slate-300 bg-white px-3 py-2 text-xs sm:text-sm font-medium text-slate-700 transition hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700" do %>
            <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            <span class="hidden sm:inline">Back to Directory</span>
            <span class="sm:hidden">Back</span>
          <% end %>
        </div>
      </div>

      <div class="p-3 sm:p-6 space-y-4 sm:space-y-6">
        <!-- Quick Links -->
        <div class="flex flex-wrap items-center gap-2 sm:gap-3">
          <%= link_to archetypes_path, class: "inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-xs font-medium text-slate-700 hover:bg-slate-50 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700" do %>
            <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
            </svg>
            <span>Archetypes</span>
          <% end %>
          <%= link_to spirit_animals_path, class: "inline-flex items-center gap-1.5 rounded-lg border border-indigo-200/50 bg-indigo-50/50 px-3 py-1.5 text-xs font-medium text-indigo-700 hover:bg-indigo-100 hover:text-indigo-800 dark:border-indigo-800 dark:bg-slate-900 dark:text-indigo-300 dark:hover:bg-slate-800 dark:hover:text-indigo-200" do %>
            <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
            </svg>
            <span>Spirit Animals</span>
          <% end %>
        </div>

        <!-- Filter -->
        <div>
          <h3 class="mb-2 sm:mb-3 text-xs sm:text-sm font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400">Filter</h3>
          <div class="flex gap-3">
            <div class="flex-1">
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Spirit Animal</label>
              <select name="q" onchange="this.form.submit()" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100">
                <option value="">All Spirit Animals</option>
                <% Motifs::Catalog.spirit_animal_names.each do |name| %>
                  <option value="<%= name.downcase %>" <%= 'selected' if @q == name.downcase %>><%= name %></option>
                <% end %>
              </select>
            </div>
            <div>
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Per Page</label>
              <select name="per_page" onchange="this.form.submit()" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100">
                <option value="6" <%= 'selected' if @per_page == 6 %>>6</option>
                <option value="12" <%= 'selected' if @per_page == 12 %>>12</option>
                <option value="24" <%= 'selected' if @per_page == 24 %>>24</option>
                <option value="48" <%= 'selected' if @per_page == 48 %>>48</option>
              </select>
            </div>
            <% if @q.present? %>
              <div class="flex items-end">
                <a href="<%= spirit_animals_path %>" class="inline-flex items-center gap-1.5 rounded-lg border border-slate-300 bg-white px-3 py-2 sm:px-4 sm:py-2.5 text-xs sm:text-sm font-medium text-slate-700 transition hover:bg-slate-50 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700">
                  <svg class="h-3.5 w-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                  <span class="hidden sm:inline">Clear</span>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </form>
  </div>

  <% if @spirit_animals.any? %>
    <!-- Spirit Animals Grid -->
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3">
    <% @spirit_animals.each do |spirit| %>
      <a href="<%= directory_path(spirit: spirit[:name]) %>" class="group block h-full">
        <div class="relative h-full flex flex-col overflow-hidden rounded-xl border-2 border-slate-200 bg-gradient-to-br from-white to-slate-50 shadow-md transition-all duration-300 hover:shadow-2xl hover:scale-[1.03] hover:border-indigo-400 dark:border-slate-700 dark:from-slate-800 dark:to-slate-900 dark:hover:border-indigo-500">
          <!-- Image Header -->
          <div class="relative h-48 overflow-hidden bg-gradient-to-br from-indigo-600/10 via-sky-600/10 to-cyan-600/10">
            <% img = motif_image_url(:spirit_animal, spirit[:slug], spirit[:image_url]) %>
            <img src="<%= img %>" alt="<%= spirit[:name] %>" class="h-full w-full object-cover opacity-90 transition-all duration-300 group-hover:opacity-100 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            
            <!-- Count Badge -->
            <% if spirit[:count] > 0 %>
              <div class="absolute top-3 right-3 rounded-full bg-indigo-600 px-3 py-1.5 text-xs font-bold text-white shadow-lg backdrop-blur-sm">
                <%= spirit[:count] %> <%= spirit[:count] == 1 ? 'profile' : 'profiles' %>
              </div>
            <% end %>
          </div>

          <!-- Content -->
          <div class="flex-1 p-5 space-y-3">
            <h3 class="text-xl font-bold text-slate-900 group-hover:text-indigo-600 dark:text-slate-100 dark:group-hover:text-indigo-400 transition-colors">
              <%= spirit[:name] %>
            </h3>
            <p class="text-sm leading-relaxed text-slate-600 dark:text-slate-400 line-clamp-3">
              <%= spirit[:short_lore].presence || spirit[:description] %>
            </p>
          </div>

          <!-- Footer -->
          <div class="mt-auto px-6 py-4 border-t border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-between text-sm font-semibold text-indigo-600 dark:text-indigo-400 group-hover:text-indigo-700 dark:group-hover:text-indigo-300 transition-colors">
              <span>View Profiles</span>
              <svg class="h-5 w-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>

  <!-- Pagination -->
  <div class="flex flex-col w-full gap-4 border-t border-slate-200 pt-6 dark:border-slate-700 md:items-center md:justify-between">
    <div class="text-center text-sm text-slate-600 dark:text-slate-400 md:text-left">
      Showing <span class="font-semibold text-slate-900 dark:text-slate-100"><%= ((@page - 1) * @per_page) + 1 %>‚Äì<%= ((@page - 1) * @per_page) + @spirit_animals.length %></span> of <span class="font-semibold text-slate-900 dark:text-slate-100"><%= @total %></span>
    </div>
    <div class="flex w-full items-center justify-center gap-2 md:w-auto md:gap-3">
      <% if @has_prev %>
        <%= link_to spirit_animals_path(q: @q.presence, per_page: @per_page, page: @page - 1), class: "inline-flex items-center gap-1.5 rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-400 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 sm:gap-2 sm:px-4" do %>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span class="hidden sm:inline">Previous</span>
          <span class="sm:hidden">Prev</span>
        <% end %>
      <% else %>
        <span class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm font-medium text-slate-400 dark:border-slate-800 dark:bg-slate-900 dark:text-slate-600 sm:gap-2 sm:px-4">
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          <span class="hidden sm:inline">Previous</span>
          <span class="sm:hidden">Prev</span>
        </span>
      <% end %>
      
      <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Page <%= @page %></span>
      
      <% if @has_next %>
        <%= link_to spirit_animals_path(q: @q.presence, per_page: @per_page, page: @page + 1), class: "inline-flex items-center gap-1.5 rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-400 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 sm:gap-2 sm:px-4" do %>
          <span class="hidden sm:inline">Next</span>
          <span class="sm:hidden">Next</span>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        <% end %>
      <% else %>
        <span class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm font-medium text-slate-400 dark:border-slate-800 dark:bg-slate-900 dark:text-slate-600 sm:gap-2 sm:px-4">
          <span class="hidden sm:inline">Next</span>
          <span class="sm:hidden">Next</span>
          <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </span>
      <% end %>
    </div>
  </div>
  <% else %>
    <div class="rounded-xl border border-slate-200 bg-white p-12 text-center dark:border-slate-700 dark:bg-slate-800">
      <div class="mx-auto max-w-md space-y-4">
        <div class="text-6xl">üêæ</div>
        <h3 class="text-xl font-bold text-slate-900 dark:text-slate-100">No spirit animals found</h3>
        <p class="text-slate-600 dark:text-slate-400">Try adjusting your filter.</p>
      </div>
    </div>
  <% end %>
</section>
