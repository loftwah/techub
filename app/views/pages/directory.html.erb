<section class="mx-auto max-w-6xl space-y-6 px-4 py-12">
  <h1 class="text-3xl font-bold text-slate-900 dark:text-slate-100">
    TecHub <span class="bg-gradient-to-r from-blue-600 via-cyan-600 to-emerald-600 bg-clip-text text-transparent dark:from-blue-400 dark:via-cyan-400 dark:to-emerald-400 animate-gradient">Directory</span>
  </h1>
  <p class="text-slate-600 dark:text-slate-300">
    Browse developer trading cards â€¢ <span class="font-semibold text-slate-900 dark:text-slate-100"><%= @total %></span> profiles
  </p>

  <!-- Filters -->
  <div class="rounded-xl border border-slate-200 bg-white shadow-sm dark:border-slate-700 dark:bg-slate-800">
    <form action="<%= directory_path %>" method="get">
      <!-- Filter Header -->
      <div class="border-b border-slate-200 px-3 py-3 sm:px-6 sm:py-4 dark:border-slate-700">
        <div class="flex items-center justify-between gap-3">
          <h2 class="text-base sm:text-lg font-semibold text-slate-900 dark:text-slate-100">Filter Profiles</h2>
          <button type="submit" class="inline-flex items-center gap-1.5 sm:gap-2 rounded-lg bg-gradient-to-r from-indigo-600 to-sky-600 px-3 py-2 sm:px-5 sm:py-2.5 text-xs sm:text-sm font-semibold text-white shadow-md transition hover:shadow-lg hover:scale-105 cursor-pointer">
            <svg class="h-3.5 w-3.5 sm:h-4 sm:w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span>Search</span>
          </button>
        </div>
      </div>

      <div class="p-3 sm:p-6 space-y-4 sm:space-y-6">
        <!-- Quick Links row -->
        <div class="flex flex-wrap items-center gap-2 sm:gap-3">
          <%= link_to motifs_path, class: "inline-flex items-center gap-1.5 rounded-lg border border-indigo-200/50 bg-indigo-50/50 px-3 py-1.5 text-xs font-medium text-indigo-700 hover:bg-indigo-100 hover:text-indigo-800 dark:border-indigo-800 dark:bg-slate-900 dark:text-indigo-300 dark:hover:bg-indigo-900/40 dark:hover:text-indigo-200 dark:hover:border-indigo-700" do %>
            <svg class="h-3.5 w-3.5" viewBox="0 0 20 20" fill="currentColor"><path d="M11.3 1.046a1 1 0 011.4 0l6.25 6.25a1 1 0 010 1.414l-6.25 6.25a1 1 0 01-1.4-1.414L16.086 9.5H1a1 1 0 110-2h15.086L11.3 2.46a1 1 0 010-1.414z"/></svg>
            <span>Motifs & Lore</span>
          <% end %>
        </div>
        <!-- Search & Basic Filters -->
        <div>
          <h3 class="mb-2 sm:mb-3 text-xs sm:text-sm font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400">Search</h3>
          <div class="grid gap-3 sm:gap-4 sm:grid-cols-2 lg:grid-cols-4">
            <div data-controller="autocomplete" data-autocomplete-field-value="username" data-action="click@window->autocomplete#clickOutside" class="relative">
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Username or Name</label>
              <input type="text" name="q" value="<%= h @q %>" data-autocomplete-target="input" data-action="input->autocomplete#search" placeholder="@login or name" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 placeholder-slate-400 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-500">
              <div data-autocomplete-target="results" class="hidden absolute z-50 mt-1 w-full rounded-lg border border-slate-200 bg-white shadow-lg dark:border-slate-700 dark:bg-slate-800 max-h-60 overflow-auto"></div>
            </div>
            <div data-controller="autocomplete" data-autocomplete-field-value="tag" data-action="click@window->autocomplete#clickOutside" class="relative">
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Tags</label>
              <input type="text" name="tags" value="<%= h @tags&.join(', ') %>" data-autocomplete-target="input" data-action="input->autocomplete#search" placeholder="ruby, ai, rails" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 placeholder-slate-400 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-500">
              <div data-autocomplete-target="results" class="hidden absolute z-50 mt-1 w-full rounded-lg border border-slate-200 bg-white shadow-lg dark:border-slate-700 dark:bg-slate-800 max-h-60 overflow-auto"></div>
              <% if @tags&.any? %>
                <div class="mt-1 flex flex-wrap gap-1">
                  <% @tags.each do |t| %>
                    <span class="inline-flex items-center gap-1 rounded-full bg-indigo-100 px-2 py-0.5 text-[11px] font-medium text-indigo-700 dark:bg-indigo-950 dark:text-indigo-300">
                      #<%= t %>
                      <a href="<%= directory_path(tags: (@tags - [t]).join(', '), q: @q.presence, language: @language.presence, archetype: @archetype.presence, spirit: @spirit.presence, min_followers: @min_followers, hireable: @hireable ? 1 : nil, active: @active ? 1 : nil, mine: @mine ? 1 : nil) %>" class="ml-1 text-indigo-600 hover:text-indigo-800 dark:text-indigo-400">Ã—</a>
                    </span>
                  <% end %>
                </div>
              <% end %>
            </div>
            <div data-controller="autocomplete" data-autocomplete-field-value="language" data-action="click@window->autocomplete#clickOutside" class="relative">
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Language</label>
              <input type="text" name="language" value="<%= h @language %>" data-autocomplete-target="input" data-action="input->autocomplete#search" placeholder="e.g., ruby" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 placeholder-slate-400 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-500">
              <div data-autocomplete-target="results" class="hidden absolute z-50 mt-1 w-full rounded-lg border border-slate-200 bg-white shadow-lg dark:border-slate-700 dark:bg-slate-800 max-h-60 overflow-auto"></div>
            </div>
            <div>
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Min Followers</label>
              <input type="number" name="min_followers" min="0" value="<%= h(@min_followers || '') %>" placeholder="0" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 placeholder-slate-400 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100 dark:placeholder-slate-500">
            </div>
          </div>
        </div>

        <!-- Card Attributes -->
        <div>
          <div class="mb-2 sm:mb-3">
            <h3 class="text-xs sm:text-sm font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400">Card Attributes</h3>
            <p class="mt-1 text-[11px] text-slate-500 dark:text-slate-400">Explore archetypes and spirit animals used on cards.</p>
          </div>
          <div class="grid gap-3 sm:gap-4 sm:grid-cols-2">
            <div>
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Archetype</label>
              <select name="archetype" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100">
                <option value="">All Archetypes</option>
                <% Motifs::Catalog.archetype_names.each do |name| %>
                  <option value="<%= name %>" <%= 'selected' if @archetype == name %>><%= name %></option>
                <% end %>
              </select>
            </div>
            <div>
              <label class="mb-1 sm:mb-1.5 block text-xs sm:text-sm font-medium text-slate-700 dark:text-slate-300">Spirit Animal</label>
              <select name="spirit" class="w-full rounded-lg border border-slate-300 bg-white px-2.5 py-2 sm:px-3.5 sm:py-2.5 text-xs sm:text-sm text-slate-900 transition focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600 dark:bg-slate-900 dark:text-slate-100">
                <option value="">All Spirit Animals</option>
                <% Motifs::Catalog.spirit_animal_names.each do |name| %>
                  <option value="<%= name %>" <%= 'selected' if @spirit == name %>><%= name %></option>
                <% end %>
              </select>
            </div>
          </div>
        </div>

        <!-- Layout & Additional Filters -->
        <div>
          <div class="mb-2 sm:mb-3 flex items-center justify-between">
            <h3 class="text-xs sm:text-sm font-semibold uppercase tracking-wide text-slate-500 dark:text-slate-400">Layout & Filters</h3>
            <div class="flex items-center gap-2 text-xs sm:text-sm">
              <label class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 dark:border-slate-700 dark:bg-slate-800/50 cursor-pointer">
                <input type="radio" name="layout" value="compact" <%= 'checked' if @layout == 'compact' %> class="h-3.5 w-3.5 text-indigo-600">
                <span>Compact</span>
              </label>
              <label class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 dark:border-slate-700 dark:bg-slate-800/50 cursor-pointer">
                <input type="radio" name="layout" value="comfortable" <%= 'checked' if @layout == 'comfortable' %> class="h-3.5 w-3.5 text-indigo-600">
                <span>Comfortable</span>
              </label>
              <label class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 dark:border-slate-700 dark:bg-slate-800/50 cursor-pointer">
                <input type="radio" name="layout" value="single" <%= 'checked' if @layout == 'single' %> class="h-3.5 w-3.5 text-indigo-600">
                <span>Single</span>
              </label>
            </div>
          </div>

          <div class="flex flex-wrap gap-2 sm:gap-4">
            <label class="inline-flex items-center gap-1.5 sm:gap-2.5 rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 sm:px-4 sm:py-2.5 text-xs sm:text-sm font-medium text-slate-700 transition hover:bg-slate-100 dark:border-slate-700 dark:bg-slate-800/50 dark:text-slate-300 dark:hover:bg-slate-800 cursor-pointer">
              <input type="checkbox" name="hireable" value="1" <%= 'checked' if @hireable %> class="rounded border-slate-300 text-indigo-600 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600">
              <span>Hireable</span>
            </label>
            <label class="inline-flex items-center gap-1.5 sm:gap-2.5 rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 sm:px-4 sm:py-2.5 text-xs sm:text-sm font-medium text-slate-700 transition hover:bg-slate-100 dark:border-slate-700 dark:bg-slate-800/50 dark:text-slate-300 dark:hover:bg-slate-800 cursor-pointer">
              <input type="checkbox" name="active" value="1" <%= 'checked' if @active %> class="rounded border-slate-300 text-indigo-600 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600">
              <span>Active (30d)</span>
            </label>
            <label class="inline-flex items-center gap-1.5 sm:gap-2.5 rounded-lg border border-slate-200 bg-slate-50 px-2.5 py-1.5 sm:px-4 sm:py-2.5 text-xs sm:text-sm font-medium text-slate-700 transition hover:bg-slate-100 dark:border-slate-700 dark:bg-slate-800/50 dark:text-slate-300 dark:hover:bg-slate-800 cursor-pointer">
              <input type="checkbox" name="mine" value="1" <%= 'checked' if @mine %> class="rounded border-slate-300 text-indigo-600 focus:ring-2 focus:ring-indigo-500/20 dark:border-slate-600">
              <span>My Profiles</span>
            </label>
          </div>
        </div>
      </div>
    </form>
  </div>

  <% if @profiles.any? %>
    <!-- Tag Cloud -->
    <% if @tag_cloud.any? %>
      <div class="flex flex-wrap gap-2">
        <% @tag_cloud.first(20).each do |t, count| %>
          <% selected = Array(@tags).include?(t.to_s.downcase) %>
          <% new_tags = selected ? Array(@tags) - [ t.to_s.downcase ] : (Array(@tags) + [ t.to_s.downcase ]).uniq %>
          <a href="<%= directory_path(tags: new_tags.join(', '), q: @q.presence, language: @language.presence, archetype: @archetype.presence, spirit: @spirit.presence, min_followers: @min_followers, hireable: @hireable ? 1 : nil, active: @active ? 1 : nil, mine: @mine ? 1 : nil) %>" class="inline-flex items-center gap-1.5 rounded-full border <%= selected ? 'border-indigo-400 bg-indigo-50 text-indigo-700 dark:border-indigo-500 dark:bg-indigo-950/40 dark:text-indigo-300' : 'border-slate-200 bg-white text-slate-700 dark:border-slate-700 dark:bg-slate-800 dark:text-slate-300' %> px-3 py-1.5 text-sm font-medium shadow-sm transition hover:border-indigo-500 hover:bg-indigo-50 hover:text-indigo-700 dark:hover:border-indigo-400 dark:hover:bg-indigo-950 dark:hover:text-indigo-300">
            <span>#<%= t %></span>
            <span class="text-xs text-slate-500 dark:text-slate-500"><%= count %></span>
          </a>
        <% end %>
      </div>
    <% end %>

    <!-- Cards Grid -->
    <% grid_classes = case @layout
       when 'single' then 'grid-cols-1'
       when 'comfortable' then 'sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2 xl:grid-cols-2'
       else 'sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-2'
       end %>
    <div class="grid gap-6 <%= grid_classes %> items-stretch">
      <% @profiles.each do |profile| %>
        <% card = profile.profile_card %>
        <% atk = card&.attack || 70 %>
        <% defn = card&.defense || 60 %>
        <% spd = card&.speed || 80 %>
        
        <a href="<%= profile_path(username: profile.login) %>" class="group block h-full">
          <div class="relative h-full flex flex-col overflow-hidden rounded-xl border border-slate-200 bg-gradient-to-br from-slate-50 to-white shadow-md transition-all duration-300 hover:shadow-2xl hover:scale-[1.02] hover:border-indigo-300 dark:border-slate-700 dark:from-slate-800 dark:to-slate-900 dark:hover:border-indigo-500">
            <!-- Card Preview Image -->
            <div class="relative h-48 overflow-hidden bg-gradient-to-br from-sky-600/10 via-indigo-600/10 to-cyan-600/10">
              <% gen_dir = Rails.root.join('public','generated', profile.login) %>
              <% card_img = nil %>
              
            <% # Prefer recorded assets; fall back to local files under public/generated/ %>
            <% card_img = profile_asset_url(profile, 'avatar_9x16') || profile_asset_url(profile, 'og', fallback_basename: 'og') || profile_asset_url(profile, 'card', fallback_basename: 'card') %>
              
              <% if card_img.present? %>
                <img src="<%= card_img %>" alt="<%= profile.display_name %> card" class="h-full w-full object-cover object-center opacity-90 transition-all duration-300 group-hover:opacity-100 group-hover:scale-110" loading="lazy" onerror="this.style.display='none'">
              <% end %>
              
              <!-- Fallback gradient background when no image -->
              <div class="absolute inset-0 bg-gradient-to-br from-sky-600/20 via-indigo-600/20 to-cyan-600/20"></div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
              
              <!-- Avatar Badge -->
              <div class="absolute bottom-3 left-3">
                <div class="h-16 w-16 rounded-full border-2 border-white/90 bg-slate-800 p-0.5 shadow-lg">
                  <% avatar_src = avatar_image_url_for(profile) %>
                  <img src="<%= avatar_src %>" alt="<%= profile.login %>" class="h-full w-full rounded-full object-cover" onerror="this.onerror=null; this.src='<%= asset_path("android-chrome-512x512.jpg") %>'">
                </div>
              </div>

              <!-- Stats Badge -->
              <div class="absolute top-3 right-3 rounded-lg bg-black/60 backdrop-blur-sm px-2.5 py-1.5 text-xs font-bold text-white shadow-lg">
                <div class="flex items-center gap-2">
                  <span class="text-yellow-300"><%= atk %></span>
                  <span class="text-blue-300"><%= defn %></span>
                  <span class="text-green-300"><%= spd %></span>
                </div>
              </div>
            </div>

            <!-- Card Info -->
            <div class="p-4 space-y-3 flex-1 flex flex-col min-h-[190px]">
              <div>
                <h3 class="truncate text-lg font-bold text-slate-900 group-hover:text-indigo-600 dark:text-slate-100 dark:group-hover:text-indigo-400">
                  <%= profile.display_name %>
                </h3>
                <p class="truncate text-sm text-slate-600 dark:text-slate-400">@<%= profile.login %></p>
              </div>

              <!-- Stats Bars -->
              <div class="space-y-1.5">
                <div class="flex items-center gap-2">
                  <span class="text-xs font-medium text-slate-600 dark:text-slate-400 w-8">ATK</span>
                  <div class="flex-1 h-1.5 bg-slate-200 rounded-full overflow-hidden dark:bg-slate-700">
                    <div class="h-full bg-gradient-to-r from-yellow-500 to-amber-400 transition-all duration-500" style="width: <%= atk %>%"></div>
                  </div>
                  <span class="text-xs font-bold text-yellow-600 dark:text-yellow-400 w-6 text-right"><%= atk %></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-xs font-medium text-slate-600 dark:text-slate-400 w-8">DEF</span>
                  <div class="flex-1 h-1.5 bg-slate-200 rounded-full overflow-hidden dark:bg-slate-700">
                    <div class="h-full bg-gradient-to-r from-blue-500 to-cyan-400 transition-all duration-500" style="width: <%= defn %>%"></div>
                  </div>
                  <span class="text-xs font-bold text-blue-600 dark:text-blue-400 w-6 text-right"><%= defn %></span>
                </div>
                <div class="flex items-center gap-2">
                  <span class="text-xs font-medium text-slate-600 dark:text-slate-400 w-8">SPD</span>
                  <div class="flex-1 h-1.5 bg-slate-200 rounded-full overflow-hidden dark:bg-slate-700">
                    <div class="h-full bg-gradient-to-r from-emerald-500 to-green-400 transition-all duration-500" style="width: <%= spd %>%"></div>
                  </div>
                  <span class="text-xs font-bold text-green-600 dark:text-green-400 w-6 text-right"><%= spd %></span>
                </div>
              </div>

              <% if card&.flavor_text.present? %>
                <p class="text-xs text-slate-700 dark:text-slate-300" style="display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;overflow:hidden;"><%= card.flavor_text %></p>
              <% end %>

              <!-- Meta Info -->
              <div class="flex items-center justify-between text-xs text-slate-600 dark:text-slate-400 pt-2 border-t border-slate-200 dark:border-slate-700">
                <span class="flex items-center gap-1">
                  <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                  </svg>
                  <%= profile.followers.to_i %>
                </span>
                <% if card&.archetype.present? %>
                  <span class="truncate max-w-[120px]"><%= card.archetype %></span>
                <% end %>
              </div>

              <!-- Tags -->
              <% if card && Array(card.tags).any? %>
                <div class="mt-auto flex flex-wrap gap-1.5">
                  <% Array(card.tags).first(6).each do |t| %>
                    <span class="inline-block rounded-full bg-indigo-100 px-2 py-0.5 text-xs font-medium text-indigo-700 dark:bg-indigo-950 dark:text-indigo-300">#<%= t.to_s.downcase %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </a>
      <% end %>
    </div>

    <!-- Pagination -->
    <div class="flex flex-col w-full gap-4 border-t border-slate-200 pt-6 dark:border-slate-700 md:items-center md:justify-between">
      <div class="text-center text-sm text-slate-600 dark:text-slate-400 md:text-left">
        Showing <span class="font-semibold text-slate-900 dark:text-slate-100"><%= ((@page - 1) * @per_page) + 1 %>â€“<%= ((@page - 1) * @per_page) + @profiles.length %></span> of <span class="font-semibold text-slate-900 dark:text-slate-100"><%= @total %></span>
      </div>
      <div class="flex w-full items-center justify-center gap-2 md:w-auto md:gap-3">
        <% if @has_prev %>
          <%= link_to directory_path(q: @q.presence, tag: @tag.presence, language: @language.presence, archetype: @archetype.presence, spirit: @spirit.presence, min_followers: @min_followers, hireable: @hireable ? 1 : nil, active: @active ? 1 : nil, mine: @mine ? 1 : nil, page: @page - 1), class: "inline-flex items-center gap-1.5 rounded-lg border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:bg-slate-50 hover:border-slate-400 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-300 dark:hover:bg-slate-700 sm:gap-2 sm:px-4" do %>
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span class="hidden sm:inline">Previous</span>
            <span class="sm:hidden">Prev</span>
          <% end %>
        <% else %>
          <span class="inline-flex items-center gap-1.5 rounded-lg border border-slate-200 bg-slate-50 px-3 py-2 text-sm font-medium text-slate-400 dark:border-slate-800 dark:bg-slate-900 dark:text-slate-600 sm:gap-2 sm:px-4">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            <span class="hidden sm:inline">Previous</span>
            <span class="sm:hidden">Prev</span>
          </span>
        <% end %>
        
        <span class="text-sm font-medium text-slate-700 dark:text-slate-300">Page <%= @page %></span>
        
        <% if @has_next %>
